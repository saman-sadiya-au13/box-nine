<main class="bg-login">
    <div class="container-fluid bg-login">
      <div class="row">
        <div class="col-sm-6 login-section-wrapper">
          <div class="brand-wrapper">
            <img src="/images/logotpone.png" alt="logo" class="logo">
          </div>
          <div id="error-box"></div>
          <div class="login-wrapper my-auto">
            <h1 class="login-title">Log in</h1>
            <form>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com" required="true">
              </div>
              <div class="form-group mb-4">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword" required>
              </div>
              <input name="login" id="login" class="btn btn-block login-btn" type="button" value="Login">
              <a href="/auth/signup" class="btn btn-block btn-outline-dark" type="button">Signup</a>
            </form>
          </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/images/login.jpg" alt="login image" class="login-img">
        </div>
      </div>
    </div>
  </main>
  <script src="/javascripts/adminLogin.js"></script>