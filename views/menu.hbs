<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
        <img class="d-block w-100" width="100%" height="600px"  src="/images/image2.jpeg" alt="Third slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" width="100%" height="600px"  src="/images/imageone.jpeg" alt="Second slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" width="100%" height="600px" src="/images/image3.jpeg" alt="First slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<main class="container">
    <div class=" text-center mt-5 ">
        <h1 class="text-color-main">Menu items.</h1>
    </div>
    <div class="row my-3">
        {{#each products}}
        <div class="col-md-6 col-lg-4 mb-3">
        <div class="card box-shadow" style="width: 16rem;">
            <img class="card-img-top" height="200px" src={{this.uploadImageUrl}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><b>{{this.name}}</b></h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.category}}</p>
            <div class="card-text bg-light d-flex justify-content-between mb-2">
                <div>Price</div>
                <div>â‚¹{{this.price}}</div>
            </div>



            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group mr-2" role="group">
                    <a class="btn btn-secondary" href="/product/updateform/{{this._id}}" role="button">Update</a>
                </div>
                <div class="btn-group mr-2" role="group">
                    <form id="contact-form" method="POST"  action="/product/delete/{{this._id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-secondary" type="submit">Delete</button>
                    </form>
                </div>
                </div>
        </div>
        </div>
        </div>
        {{/each}}
    </div>

<div class="container">
    <a class="btn btn-secondary btn-lg btn-block" href="/admin/menuform" role="button">Add more items to menuðŸ¥—</a>
</div>

</main>
