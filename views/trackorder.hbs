<main>
    <div class="container mt-3 d-flex justify-content-center">
        <h1>
            Update Your Orders
        </h1>
    </div>

    <div class="container mt-5 mb-5">

    <div>
    <table class="table">
    <thead class="thead-dark-s">
    <tr>
        <th scope="col">OrderId</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Order-Status</th>
        <th scope="col">Address</th>
    </tr>
    </thead>
    <tbody>
    {{#each order}}
    <tr>
        <th scope="row">1</th>
        <td>{{this.user.name}}</td>
        <td>{{this.user.email}}</td>
        <td>
            <form action="/order/order/{{this._id}}/status?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="col-md-7 d-flex flex-direction-row">
                <div class="form-group"> <label for="form_need">Current Status: {{this.status}}</label> <select id="form_need" name="status" class="form-control" required="required" data-error="Please specify your need.">
                    <option selected disabled>--Select Your Order-status--</option>
                    <option>Recieved</option>
                    <option>Processing</option>
                    <option>Delivered</option>
                    <option>Cancelled</option>
                    </select> 
                </div>
            </div>
                <div class="col-md-5"> 
                    <input type="submit" class="btn btn-info btn-send pt-2" value="Submit"> 
                </div>
            </form>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>
</div>
</div>



</main>